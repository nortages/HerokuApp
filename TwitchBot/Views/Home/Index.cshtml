@model List<TwitchBot.Models.ChannelBotInfo>

@{
    ViewData["Title"] = $"Home";
}

<h2>This is a home page of @ViewData["BotUsername"]</h2>

<div id="channels-block">
    <p>Currently the bot is running on these Twitch channels:</p>

    <ul>
        @foreach (var bot in Model.Where(bot => bot.IsEnabled))
        {
            <li>
                <a target="_blank" href="https://www.twitch.tv/@bot.ChannelUsername">@bot.ChannelUsername</a>
            </li>
        }
    </ul>
</div>