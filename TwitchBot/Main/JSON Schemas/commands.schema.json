{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "default": {},
  "required": [
    "GeneralMessageCommandsInfo",
    "MessageCommands",
    "GeneralCommandsInfo",
    "Commands"
  ],
  "properties": {
    "GeneralMessageCommandsInfo": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "default": {},
            "required": [
              "Id"
            ],
            "properties": {
              "IsEnabled": {
                "type": "boolean",
                "default": true
              },
              "Id": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "MessageCommands": {
      "type": "array",
      "items": {
      }
    },
    "GeneralCommandsInfo": {
      "type": "array",
      "items": {
        "type": "object",
        "default": {},
        "required": [
          "Id"
        ],
        "properties": {
          "Id": {
            "type": "string"
          },
          "IsEnabled": {
            "type": "boolean",
            "default": true
          }
        },
        "additionalProperties": false
      }
    },
    "Commands": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/commandInfo"
      }
    }
  },
  "additionalProperties": false,

  "definitions": {
    "optionInfo": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "Id": {
          "type": "string"
        },
        "IsEnabled": {
          "type": "boolean",
          "default": true
        },
        "Probability": {
          "type": "number",
          "default": 0.0
        },
        "IsMentionRequired": {
          "type": "boolean"
        },
        "HasCallback": {
          "type": "boolean",
          "default": false    
        },
        "Answer": {
          "type": "string"
        },
        "MultiLangAnswer": {
          "type": "object"
        },
        "Options": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/optionInfo"
          }
        }
      },
      "additionalProperties": false,

      "if": {
        "allOf": [
          {
            "required": ["HasCallback"]
          },
          {
            "properties": {
              "HasCallback": { "const": true }
            }    
          }
        ]
      },
      "then": {
        "required": ["Id"]
      },
      "else": {
        "anyOf": [
          {
            "allOf": [
              {"required": ["Answer"]},
              {"not": {"required": ["MultiLangAnswer"]}}
            ]            
          },
          {
            "allOf": [
              {"required": ["MultiLangAnswer"]},
              {"not": {"required": ["Answer"]}}
            ]
          },
          {
            "required": ["Options"]
          }
        ]
      }
    },    
    "commandInfo": {
      "$ref": "#/definitions/optionInfo",      
      "required": [
        "Names",
        "IsMentionRequired"
      ],
      "properties": {
        "Names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "Description": {
          "type": "string"
        },
        "GlobalCooldown": {
          "type": "integer"
        },
        "IsSaveUsage": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}