{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "user_cooldown": {
      "type": "integer",
      "default": 15
    },
    "global_cooldown": {
      "type": "integer",
      "default": 5
    },
    "bot": {
      "required": [
        "enabled",
        "channel_name",
        "commands"
      ],
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "channel_name": {
          "type": "string",
          "default": ""
        },
        "helper_bot": {
          "type": "object",
          "required": [
            "twitch_client"
          ],
          "properties": {
            "twitch_client": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": true
        },
        "user_cooldown": {
          "$ref": "#/definitions/user_cooldown"
        },
        "global_cooldown": {
          "$ref": "#/definitions/global_cooldown"
        },
        "pubsub": {
          "$id": "#/properties/bots/items/properties/pubsub",
          "default": {},
          "type": "object",
          "properties": {
            "OnRewardRedeemed": {
              "$id": "#/properties/bots/items/properties/pubsub/properties/OnRewardRedeemed",
              "type": "array",
              "default": [],
              "additionalItems": true,
              "items": {
                "$id": "#/properties/bots/items/properties/pubsub/properties/OnRewardRedeemed/items",
                "type": "object",
                "default": {},
                "required": [
                  "id",
                  "callback"
                ],
                "properties": {
                  "id": {
                    "$id": "#/properties/bots/items/properties/pubsub/properties/OnRewardRedeemed/items/properties/id",
                    "type": "string",
                    "default": ""
                  },
                  "callback": {
                    "$id": "#/properties/bots/items/properties/pubsub/properties/OnRewardRedeemed/items/properties/callback",
                    "type": "string",
                    "default": ""
                  }
                },
                "additionalProperties": true
              }
            }
          },
          "additionalProperties": true
        },
        "commands": {
          "$id": "#/properties/bots/properties/commands",
          "type": "array",
          "default": [],
          "additionalItems": true,
          "items": {
            "$ref": "#/definitions/command"
          }
        }
      },
      "additionalProperties": true
    },
    "option": {
      "type": "object",
      "default": {},
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "default": ""
        },
        "probability": {
          "type": "number",
          "default": 0.0
        },
        "callback_name": {
          "type": "string",
          "default": ""
        },
        "is_mention_required": {
          "type": "boolean",
          "default": true
        },
        "answer": {
          "type": "object",
          "default": {},
          "required": [
            "ru",
            "ua"
          ],
          "properties": {
            "ru": {
              "type": "string",
              "default": ""
            },
            "ua": {
              "type": "string",
              "default": ""
            }
          },
          "additionalProperties": true
        },
        "options": {
          "type": "array",
          "default": [],
          "additionalItems": true,
          "items": {
            "type": "object",
            "default": {},
            "required": [
              "probability",
              "answer"
            ],
            "properties": {
              "probability": {
                "type": "number",
              },
              "answer": {
                "type": [ "string", "object" ],
                "default": ""
              }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "command": {
      "type": "object",
      "default": {},
      "required": [
        "id",
        "enabled"
      ],
      "properties": {
        "id": {
          "type": "string",
          "default": ""
        },
        "names": {
          "type": "array",
          "default": [],
          "additionalItems": true,
          "items": {
            "type": "string",
            "default": ""
          }
        },
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "user_cooldown": {
          "type": "integer"
        },
        "global_cooldown": {
          "type": "integer"
        },
        "answer": {
          "type": [ "object", "string" ],
          "required": [
            "ru"
          ],
          "properties": {
            "ru": {
              "type": "string",
              "default": ""
            },
            "ua": {
              "type": "string",
              "default": ""
            }
          },
          "additionalProperties": true
        },
        "callback_name": {
          "type": "string"
        },
        "save_usage": {
          "type": "boolean",
          "default": false
        },
        "options": {
          "type": "array",
          "default": [],
          "additionalItems": true,
          "items": {
            "$ref": "#/definitions/option"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "$id": "http://example.com/example.json",
  "type": "object",
  "required": [
    "bots",
    "commands"
  ],
  "properties": {
    "bots": {
      "$id": "#/properties/bots",
      "type": "array",
      "default": [],
      "additionalItems": true,
      "items": {
        "$ref": "#/definitions/bot"
      }
    },
    "commands": {
      "$id": "#/properties/commands",
      "type": "object",
      "default": {},
      "required": [
        "general",
        "service"
      ],
      "properties": {
        "general": {
          "$id": "#/properties/commands/properties/general",
          "type": "array",
          "default": [],
          "additionalItems": true,
          "items": {
            "$ref": "#/definitions/command"
          }
        },
        "service": {
          "$id": "#/properties/commands/properties/service",
          "type": "array",
          "default": [],
          "additionalItems": true,
          "items": {
            "$ref": "#/definitions/command"
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}